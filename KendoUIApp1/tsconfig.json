{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5", // support for IE 11
    "module": "system", // system.js
    "moduleResolution": "node",
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
